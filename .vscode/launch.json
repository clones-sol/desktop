{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "[clones-native] Run IPC Server",
      "type": "node-terminal",
      "request": "launch",
      "command": "PRIMARY_LOGGER=true sleep 2; cargo run --bin ipc-server-only",
      "cwd": "${workspaceFolder}/src-tauri"
    },
    {
      "name": "clones-flutter",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart"
    },
    {
      "name": "Flutter Web (Development)",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "args": [
        "-d",
        "web-server",
        "--web-port",
        "3000"
      ]
    },
    {
      "name": "Tauri Development",
      "type": "node-terminal",
      "request": "launch",
      "command": "cargo tauri dev",
      "cwd": "${workspaceFolder}/src-tauri"
    }
  ],
  "compounds": [
    {
      "name": "[COMPOUND] Flutter with IPC",
      "configurations": [
        "[clones-native] Run IPC Server",
        "clones-flutter"
      ],
      "stopAll": true
    },
    {
      "name": "[NEW] Flutter Web + Tauri Development",
      "configurations": [
        "Flutter Web (Development)",
        "Tauri Development"
      ],
      "stopAll": true
    }
  ]
}